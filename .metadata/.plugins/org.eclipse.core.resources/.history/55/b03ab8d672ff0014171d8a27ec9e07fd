


public class Ball {
	
	int x;
	int y;
	int w;
	int h;
	
	int gameW;
	int gameH;
	
	int dx = 1;
	int dy = 1;
	
	
	public Ball(int gameW, int gameH, int x, int y, int w, int h) {
		this.x = x;
		this.y = y;
		this.w = w;
		this.h = h;
		
		this.gameH = gameH;
		this.gameW = gameW;
		
		
	}

	public void update(){
		this.x = x + dx;
		this.y = y + dy;
		
		if(y > gameH-h){
			dy = -1;
		}
		if(x > gameW-w){
			dx = -1;
		}
		
		if(y < 0){
			dy = -1;
		}
		if(x < 0){
			dx = -1;
		}
		
	}

	public int getX() {
		return x;
	}

	public int getY() {
		return y;
	}

	public int getW() {
		return w;
	}

	public int getH() {
		return h;
	}


}